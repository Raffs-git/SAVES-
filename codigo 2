programa {
  funcao inicio() {
    //Declaração de variáveis 
    real altura, peso_ideal

    //Declaração de Constantes
const real k=72.7
const inteiro b=58

//Entrada de dados 
escreva ("Informe a altura de uma pessoa: ")
leia(altura)

//Processamento
peso_ideal= (k* altura) - b
//Saída de Dados
escreva("o peso ideal é: ", peso_ideal)

  }
}
